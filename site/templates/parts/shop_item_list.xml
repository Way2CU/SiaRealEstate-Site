<document>
	<div class="asset" data-id="$params['id']" cms:eval="data-id">
		<a href="javascript:void(0)" class="image" 	style="'background-image: url('.$params['image'].');'" cms:eval="style">		
			<div class="stats">
				<cms:markdown param="description" multilanguage="yes"/>		
			</div>
		</a>
		<a
			href="'tel:'.urlencode(Language::getText('ina_number'))"
			cms:eval="href"
			class="phone"
			>
			<cms:text constant="ina_number"/>
		</a>
		<span><cms:text constant="ina_title"/></span>
	</div>
</document>